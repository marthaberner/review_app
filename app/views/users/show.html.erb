<div class="greeting">
  <h1>Welcome, <%= @user.first_name %>!</h1>
</div>

<div class="posts">
  <h2>My Posts</h2>
  <% @posts.each do |post| %>
    <% if post_belongs_to_user?(post) %>
      <p>
        <%= post.body %>
      <%= link_to "Delete Post", post_path(post), method: :delete, class: "delete" %>
      </p>
    <% end %>
  <% end %>
</div>